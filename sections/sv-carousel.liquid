<link
  rel="stylesheet"
  href="{{ 'swipper-bundle.min.css' | asset_url }}"
  media="print"
  onload="this.media='all'">

<link
  rel="stylesheet"
  href="{{ 'section-sv-carousel.css' | asset_url }}"
  media="print"
  onload="this.media='all'">

<script src="{{ 'swiper-bundle.min.mjs' | asset_url }}" defer="defer"></script>

<script>
  let slidesNum = 0;
  document.addEventListener('DOMContentLoaded', (event) => {
    var swiper = new Swiper(".carousel-swiper", {
      slidesPerView: 1,
      spaceBetween: 30,
      autoplay: false,
      loop: true,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev"
      },
      on: {
        init: () => {
          slidesNum = document.querySelectorAll(".swiper-slide").length;
        },
        slideChange: function() {
          handleSlideChange(this, false);
        }
      },
      breakpoints: {
        480: {
          navigation: false
        },
        640: {
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev'
          }
        }
      }
    });

    function handleNextSlide() {
      const swiper = document.querySelector('.swiper').swiper;
      swiper.slideNext();
    }

    function handlePrevSlide() {
      const swiper = document.querySelector('.swiper').swiper;
      swiper.slidePrev();
    }

    function handleSlideChange(swiper = null, isManually = true) {
      console.log("handleSlideChange");
      if (isManually || swiper === null) {
        return;
      }

      const prevBtnEl = document.querySelector('.swiper-button-prev span');
      const prevBtnEl = document.querySelector('.swiper-button-prev span');
      if (swiper.activeIndex === 0) {
        prevBtnEl.textContent = `0${slidesNum}`;
      } else if ((swiper.activeIndex + 1) === slidesNum) {
        nextBtnEl.textContent = `01`;
      } else {
        prevBtnEl.textContent = `0${
          swiper.activeIndex
        }`;
        nextBtnEl.textContent = `0${
          swiper.activeIndex + 2
        }`;
      }
    }

// Attach event handlers
    document.querySelector('.swiper-button-next').addEventListener('click', handleNextSlide);
    document.querySelector('.swiper-button-prev').addEventListener('click', handlePrevSlide);
  });
</script>

{%- assign widths = '165, 360, 535, 750, 1070, 1500, 3840' -%}
{%- capture sizes -%}
  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
  (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2) (min-width: 3840px) 4096px
{%- endcapture -%}

<div class="sv-carousel">
  <div class="swiper carousel-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% assign image = block.settings.slide_img %}
        {% assign price = block.settings.slide_price %}
        {% assign title = block.settings.slide_title %}

        <div class="swiper-slide">
          <div class="swiper-slide-text-container">
            <p>{{ price }}</p>
            <h1>{{ title }}</h1>
          </div>
          {%- if image != blank -%}
            {{
               image
             | image_url: width: 1500
             | image_tag: loading: 'lazy', sizes: sizes, widths: widths, class: 'swiper-slider-img' }}
          {%- else -%}
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      {% endfor %}
    </div>
    <div class="swiper-arrow-next-wrapper">
      <div class="swiper-arrow swiper-button-next">
        <span class="swiper-button-inner-numbers">
          02
        </span>
      </div>
    </div>
    <div class="swiper-arrow-prev-wrapper">
      <div class="swiper-arrow swiper-button-prev">
        <span class="swiper-button-inner-numbers">
          03
        </span>
      </div>
    </div>
  </div>
</div>

{% style %}
  div:empty {
    display: block;
  }
{% endstyle %}

{% schema %}
  {
    "name": "Carousel",
    "class": "index-section",
    "settings": [],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "slide_img",
            "label": "Slide Image"
          }, {
            "type": "text",
            "id": "slide_price",
            "label": "Slide Price",
            "default": "from $79"
          }, {
            "type": "text",
            "id": "slide_title",
            "label": "Slide Title",
            "default": "Slide Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "SV - Carousel",
        "category": "Custom"
      }
    ]
  }
{% endschema %}