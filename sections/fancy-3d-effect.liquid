<link
  rel="stylesheet"
  href="{{ 'fancy-3d-effect.css' | asset_url }}"
  media="print"
  onload="this.media='all'">

<div class="effect__wrapper">
  <div class="effect__text__wrapper">
    <h2 class="effect__title">{{ section.settings.title }}</h2>
    <svg x="0px" y="0px" width="65px" height="3px" viewBox="0 0 65 3" enable-background="new 0 0 65 3" xml:space="preserve">
      <g fill="#FFFFFF"> <!-- Set fill color to white here -->
        <polygon points="0,0 16.021,0 12.958,3 0,3 "></polygon>
        <polygon points="16.268,3 19.299,0 29.562,0 26.5,3 "></polygon>
        <polygon points="29.969,3 33,0 40,0 37.031,3 "></polygon>
        <polyline points="41.031,3 44,0 49.031,0 46.031,3 "></polyline>
        <polygon points="50.969,3 54.031,0 58.031,0 55,3 "></polygon>
        <polygon points="59.96,3 62.96,0 65,0 61.992,3 "></polygon>
      </g>
    </svg>
    <p class="effect__description">
      {{ section.settings.description }}
    </p>
    {% render 'hidden-text-button' %}
  </div>
  <img
    src="{{ 'shoes.png' | asset_url }}"
    class="effect__shoes"
    width="500"
    height="500"
    loading="lazy"
  >
  {% comment %} <div class="swiper carousel-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% assign image = block.settings.slide_img %}
        {% assign price = block.settings.slide_price %}
        {% assign title = block.settings.slide_title %}

        <div class="swiper-slide" id="slide-{{ forloop.index }}">
          <div class="swiper-slide-text-container">
            <p>{{ price }}</p>
            <h1>{{ title }}</h1>
          </div>
          {%- if image != blank -%}
            {{
               image
             | image_url: width: 1500
             | image_tag: loading: 'lazy', sizes: sizes, widths: widths, class: 'swiper-slider-img' }}
          {%- else -%}
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      {% endfor %}
    </div>
    <div class="swiper-arrow-next-wrapper">
      <div class="swiper-arrow swiper-button-next">
        <span class="swiper-button-inner-numbers">
          02
        </span>
      </div>
    </div>
    <div class="swiper-arrow-prev-wrapper">
      <div class="swiper-arrow swiper-button-prev">
        <span class="swiper-button-inner-numbers">
          03
        </span>
      </div>
    </div>
  </div> {% endcomment %}
</div>

{% schema %}
{
  "name": "Fancy 3D",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [

  ],
  "presets": [
    {
      "name": "Fancy 3D",
      "category": "Custom"
    }
  ]
}
{% endschema %}